
@using Microsoft.AspNetCore.Http;

@using PressYourLuck.Helpers;




<form asp-controller="Game" asp-action="Index" method="post" enctype="application/x-www-form-urlencoded">

	<div class="container">
		@if ((bool)@ViewData["showResalts"] == true)
		{
			@if ((bool)TempData["CashOut"] == true)
			{
				<div class="alert alert-primary" role="alert">BIG WINNER! You cashed out $ @Context.Session.GetString("current-bet") coins! Care to Press Your Luck again?</div>

			}

			<h3>@ViewData["Title"] </h3>


		}




		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<label for="originalBet">How many coins would you like to wage?</label>
			<br />
			<input type="text" id="originalBet" name="originalBet" />
		</div>

		<input type="submit" value="Start Playing!" class="btn btn-primary" />
	</div>
</form>
