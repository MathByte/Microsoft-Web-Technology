



@using Microsoft.AspNetCore.Http;
@using PressYourLuck.Models;
@using Newtonsoft.Json;
@using PressYourLuck.Helpers;







<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Press Your Luck</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Press Your Luck</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Audit" asp-action="Index" asp-route-sortOrder="All">Audit</a>
						</li>

					</ul>
				</div>

				@if ((bool)@TempData["switchtogamemode"] == true)
				{
					<a class="nav-link text-dark">Total Coins:  &#36; @TempData["totalCoins"]</a>
					<a asp-controller="Game" asp-action="cashOut" type="button" class="btn btn-success">Cash Out</a>

				}

			</div>
		</nav>
	</header>
	<div class="container">


		@RenderBody()
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2021 - PressYourLuck
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
