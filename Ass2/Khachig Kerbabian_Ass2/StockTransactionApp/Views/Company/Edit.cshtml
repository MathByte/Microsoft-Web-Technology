@model Company
@{
	string title = ViewBag.Action + " Company";
	ViewBag.Title = title;
}

<h1>@title</h1>
<form asp-controller="Company" asp-action="@ViewBag.Action" method="post" enctype="application/x-www-form-urlencoded">
	<div asp-validation-summary="All" class="text-danger"></div>



	<input type="hidden" asp-for="CompanyId" />


	<div class="form-group">
		<label asp-for="Name">Company Name</label>
		<input type="text" asp-for="Name" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="Address">Company Address</label>
		<input type="text" asp-for="Address" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="TickerSymbol">Ticker Symbol</label>
		<input type="text" asp-for="TickerSymbol" class="form-control" />
	</div>

	<input type="submit" class="btn btn-primary" value="@ViewBag.Action" />
	<a asp-controller="Companys" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

