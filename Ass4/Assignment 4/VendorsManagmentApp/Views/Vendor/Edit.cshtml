@model Vendor
@{
	string title = ViewBag.Action + " a Vendor";
	ViewBag.Title = title;
}

@section scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	<script src="~/js/minimum-age.js"></script>
}


<h1>@title</h1>
<form asp-controller="Vendor" asp-action="@ViewBag.Action" method="post" enctype="application/x-www-form-urlencoded" class="col-sm-6">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>



	<input type="hidden" asp-for="VendorId" />

	<div class="form-group row ">
		<div class="col-sm-4"><label asp-for="VendorName">Vendor Name:</label></div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorName" class="form-control" />
		</div>
		<div class="col-sm-4">
			<span asp-validation-for="VendorName" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-4"><label asp-for="VendorAddress1">VendorAddress1:</label></div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorAddress1" class="form-control" />
		</div>
		<div class="col-sm-4">
			<span  asp-validation-for="VendorAddress1" class="text-danger"></span>
		</div>
	</div>


	<div class="form-group row">
		<div class="col-sm-4"><label asp-for="VendorAddress2">VendorAddress2:</label></div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorAddress2" class="form-control" />
		</div>
		<div class="col-sm-4">
			<span asp-validation-for="VendorAddress2" class="text-danger"></span>
		</div>
	</div>


	<div class="form-group row">
		<div class="col-sm-4"><label asp-for="VendorCity">VendorCity:</label></div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorCity" class="form-control" />
		</div>
		<div class="col-sm-4">
			<span asp-validation-for="VendorCity" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-4"><label asp-for="VendorState">VendorState:</label></div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorState" class="form-control" />
		</div>
		<div class="col-sm-4">
			<span asp-validation-for="VendorState" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-4"><label asp-for="VendorZipCode">VendorZipCode:</label></div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorZipCode" class="form-control" />
		</div>
		<div class="col-sm-4">
			<span asp-validation-for="VendorZipCode" class="text-danger"></span>
		</div>
	</div>


	<div class="form-group row">
		<div class="col-sm-4"><label asp-for="VendorPhone">VendorPhone:</label></div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorPhone" class="form-control" />
		</div>
		<div class="col-sm-4">
			<span asp-validation-for="VendorPhone" class="text-danger"></span>
		</div>
	</div>


	<div class="form-group row">
		<div class="col-sm-4"><label asp-for="VendorContactFirstName">VendorContactFirstName:</label></div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorContactFirstName" class="form-control" />
		</div>

	</div>
	<div class="form-group row">
		<div class="col-sm-4">
			<label asp-for="VendorContactLastName">VendorContactLastName:</label>
		</div>
		<div class="col-sm-4">
			<input type="text" asp-for="VendorContactLastName" class="form-control" />
		</div>

	</div>







	<div class="form-group row">
		<div class="col-sm-4">
			<label asp-for="DefaultTermsId">Default Terms</label>
		</div>
		<div class="col-sm-4">
			<select asp-for="DefaultTermsId" class="form-control">
				<option value="">Select term..</option>
				@foreach (Term t in ViewBag.Terms)
				{
					<option value="@t.TermsId">@t.TermsDueDays</option>
				}
			</select>
		</div>
		<div class="col-sm-4">
			<span asp-validation-for="DefaultTermsId" class="text-danger"></span>
		</div>

	</div>



	<div class="form-group row">
		<div class="col-sm-4">
			<label asp-for="DefaultAccountNumber">Default acct #:</label>
		</div>
		<div class="col-sm-4">

			<select asp-for="DefaultAccountNumber" class="form-control">
				<option value="">Select DefaultAccountNumber..</option>
				@foreach (GeneralLedgerAccount gla in ViewBag.generalLedgerAccounts)
				{
					<option value="@gla.AccountNumber">@gla.AccountNumber</option>
				}
			</select>
		</div>

		<div class="col-sm-4">
			<span asp-validation-for="DefaultAccountNumber" class="text-danger"></span>
		</div>
	</div>

	<div class="row">
		<div class="offset-sm-4 col-sm-6 ">
			<input type="submit" class="btn btn-primary" value="@ViewBag.Action" />
			<a asp-controller="Vendors" asp-action="Index" class="btn btn-primary">Cancel</a>
		</div>
	</div>

</form>

